{
  "name": "datamage-com",
  "version": "1.0.0",
  "description": "A Tailwind CSS + Alpine.js client application",
  "main": "index.js",
  "repository": "https://github.com/shaxejones/datamage-com",
  "author": "copilot-swe-agent[bot] <198982749+Copilot@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./public/output.css --minify",
    "build:js": "esbuild src/app.js --bundle --minify --outfile=public/app.js",
    "build": "yarn build:css && yarn build:js",
    "dev:css": "tailwindcss -i ./src/input.css -o ./public/output.css --watch",
    "dev:js": "esbuild src/app.js --bundle --outfile=public/app.js --watch",
    "serve": "http-server public -p 8080 -o"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "esbuild": "^0.27.0",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "alpinejs": "^3.15.1"
  }
}
